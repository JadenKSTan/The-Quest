def start_game():
    print ("The Quest")
    print ("")
    print ("The Ultimate Quest Game - by JadenKSTan")

    def startorrestart():
        while True:
            startgame = input("Would you like to start the game? Type 'yes' or 'no' to continue with your action.")
            if startgame == "yes" or "Yes":
                print("The Game is Starting.")
                return True
            elif startgame == 'no':
                #tips and tricks, other stuff
                
                restartgame = input("Would you like to restart the game? (Yes/No): ")
                if restartgame == 'yes':
                    print("Restarting...")
                    continue
                else:
                    print("Thank you for playing. Your Quest ends here.")
                    return False
            else:
                print("Please answer with either 'Yes' or 'No'.")

    if startorrestart():
        print("Start Game")

start_game()
